<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="BIWAC" sortOrder="9" translate="label">
            <label>BIWAC</label>
        </tab>
        <section id="BIWAC" sortOrder="1000" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
            <label>Assembly Service</label>
            <tab>BIWAC</tab>
            <resource>BIWAC_AssemblyService::config</resource>
            <group id="settings" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1" translate="label">
                <label>Settings</label>
                <field id="version" translate="label" type="label" sortOrder="1" showInDefault="1" showInWebsite="0"
                       showInStore="0">
                    <label>Version</label>
                    <frontend_model>BIWAC\AssemblyService\Block\Adminhtml\System\Config\Version</frontend_model>
                </field>
                <field id="enabled" type="select" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1"
                       translate="label">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
        </section>
    </system>
</config>
